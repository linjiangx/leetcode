#注意边界条件，两个字符串同时为空
class Solution:
    def strStr(self, haystack, needle):
        """
        :type haystack: str
        :type needle: str
        :rtype: int
        """
        l1,l2=len(haystack),len(needle)
        if l1==l2 and l1==0:
            return 0         
        for i in range(l1):
            if haystack[i:i+l2]==needle:
                return i
        return -1
        
#
class Solution:
    def strStr(self, haystack, needle):
        """
        :type haystack: str
        :type needle: str
        :rtype: int
        """
        le1=len(haystack)
        le2=len(needle)
        if le2==0:
            return 0
        
        for i in range(le1-le2+1):
            if haystack[i:i+le2]==needle:
                return i
        return -1
