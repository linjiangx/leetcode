#
#
class Solution:
    def threeSumClosest(self, nums, target):
        if len(nums) == 3:
            return sum(nums)
        nums.sort()
        res = []
        cur_sum = near_sum = float('inf')
        for i in range(len(nums) - 2):
            new_target = target - nums[i]
            left = i + 1
            right = len(nums) - 1
            cur_sum = nums[i] + nums[left] + nums[right]
            if abs(cur_sum - target) < abs(near_sum - target):
                near_sum = cur_sum
            while left < right:
                cur_sum = nums[i] + nums[left] + nums[right]
                if abs(cur_sum - target) < abs(near_sum - target):
                    near_sum = cur_sum
                if nums[left] + nums[right] < new_target:
                    left += 1
                elif nums[left] + nums[right] > new_target:
                    right -= 1
                else:
                    return target
        return near_sum
                    
                    
        
